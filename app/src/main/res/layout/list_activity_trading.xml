<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="trading"
            type="com.example.bankoflunar.ui.trading.model.Trading" />
        <variable
            name="seeTradingDetails"
            type="Runnable" />

    </data>

    <androidx.cardview.widget.CardView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/myAsh"
        app:cardElevation="5dp"
        app:cardCornerRadius="@dimen/card_cornerRadius"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:onClick="@{() -> seeTradingDetails.run()}">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{trading.accountType}"
                    tools:text="BTC"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="20sp"
                    android:text="@{trading.amount}"
                    tools:text="$0"/>


            </LinearLayout>

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:layout_gravity="center_vertical"
                android:text="@{trading.date}"
                android:maxLines="1"
                tools:text="vdhfnokhhbjhbhjhwovih" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ic_right" />


        </LinearLayout>


    </androidx.cardview.widget.CardView>
</layout>